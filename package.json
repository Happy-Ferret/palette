{
  "name": "@artsy/palette",
  "version": "0.1.1",
  "description": "Design system library for react components",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist",
    "compile": "tsc --declaration",
    "precommit": "lint-staged",
    "prepublishOnly": "yarn clean && yarn compile",
    "prettier": "prettier",
    "prettier-project": "yarn prettier-write 'src/**/*.{ts,tsx}'",
    "prettier-write": "yarn prettier --write",
    "semantic-release": "semantic-release",
    "test": "yarn type-check",
    "type-check": "tsc --noEmit --pretty"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/artsy/palette.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/artsy/palette/issues"
  },
  "homepage": "https://github.com/artsy/palette#readme",
  "peerDependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "styled-components": "^3"
  },
  "devDependencies": {
    "@types/node": "^10.3.0",
    "@types/react": "^16.3.13",
    "jest": "^23.1.0",
    "lint-staged": "^7.1.3",
    "prettier": "^1.12.1",
    "react-dom": "^16.2.0",
    "semantic-release": "^15.5.0",
    "typescript": "^2.8.3",
    "typescript-styled-plugin": "^0.6.3"
  },
  "dependencies": {
    "react": "^16.3.2",
    "react-primitives": "^0.5.0",
    "styled-components": "^3.2.6",
    "styled-system": "^2.2.5"
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn prettier-write --",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true
  },
  "release": {
    "analyzeCommits": {
      "preset": "ember",
      "releaseRules": [
        {
          "tag": "DOC",
          "release": "patch"
        },
        {
          "tag": "FIX",
          "release": "patch"
        },
        {
          "tag": "PATCH",
          "release": "patch"
        },
        {
          "tag": "FEATURE",
          "release": "minor"
        },
        {
          "tag": "BREAKING",
          "release": "major"
        }
      ]
    }
  }
}
